<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_settings_customization_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.category_wise_discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="pos_accounting_section" position="after">
                <block title="Category wise discount">
                    <setting string="Is discount limit">
                        <field name="_is_pos_discount_limit"/>
                    </setting>
                    <div class="content-group" invisible="not _is_pos_discount_limit">
                        <div class="mt16">
                            <group>
                                <field name="pos_discount_limit" style="width:5rem"/>
                            </group>
                        </div>
                    </div>
                </block>
            </block>
        </field>
    </record>
</odoo>
